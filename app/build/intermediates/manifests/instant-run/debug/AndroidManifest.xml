<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lenovo.rodienew"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.lenovo.rodienew.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.lenovo.rodienew.activity.SplashScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.lenovo.rodienew.activity.ureg" />
        <activity
            android:name="com.example.lenovo.rodienew.activity.MainAdmin"
            android:label="@string/title_activity_main_admin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.lenovo.rodienew.activity.MainUser"
            android:label="@string/title_activity_main_user"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.lenovo.rodienew.activity.Mainserviceprovider"
            android:label="@string/title_activity_mainserviceprovider"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>